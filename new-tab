#!/bin/bash

function newTab() {
    tabName="$1";
    if [[ -z ${tabName} ]]; then
        read -p "Please enter name of new tab: " tabName;
    fi;
    guake -e 'clear' -r "${tabName}";
    guake --new-tab="/home/jonathanb" -e "cd ~; clear; cat ~/bin/motd/cat-in-the-hat.txt" -r "localhost";
};

currentTab=$(guake -g);
if [[ $# > 0 ]]; then
    for tabName in "$@"; do
        newTab $tabName;
    done;
else
    newTab;
fi;
guake -s $currentTab;

